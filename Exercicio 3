#include <stdio.h>
#include <stdlib.h>

int perfeito(int *n)
{
    int i;
    int *soma;

    soma = malloc(sizeof(int));
    *soma = 0;
    for(i= 1; i<*n; i++)
    {
        if(*n % i == 0)
        {
            *soma += i;
        }
    }

    if(*soma == *n)
    {
        return 1;
    }
    else
    {
        return 0;
    }
}
